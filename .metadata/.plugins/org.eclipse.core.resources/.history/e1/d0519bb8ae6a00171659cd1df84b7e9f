#include <stdio.h>
#include <stdlib.h>

int hammingDistance(int x, int y);

int main()
{
	int result;
	result = hammingDistance(0b1100, 0b0000);
	return 0;
}

int hammingDistance(int x, int y)
{
	int ANDmask = x & y;
	int NANDmask = ~(x | y);
	int hammingDistance = 0;

	printf("ANDmask: %#010x\n", ANDmask); // look for where the same bits are 1
	printf("NANDmask: %#010x\n", NANDmask); // look for where the same bits are 0

	for(int i = 0; i < 32; i++)
	{
		if(ANDmask & (1 << i) || (NANDmask & (1 << i)))
		{
			printf("Match Found At Bit Position %d\n", i);
			++hammingDistance;
		}
	}

	return 32 - hammingDistance;
}
